<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CourseInformation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="312dp">


            <ImageView
                android:id="@+id/courseImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/image" />


            <ImageView
                android:id="@+id/arrow_Back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow_back_black_24dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.teacheronlinecourse.Fonts.Comfortaa_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This course include"
                android:layout_weight="1"
                android:textSize="25sp" />
            <com.example.teacheronlinecourse.Fonts.Comfortaa_Bold
                android:layout_width="0dp"
                android:layout_weight="2.3"
                android:layout_height="match_parent"
                android:id="@+id/addRate"
                android:gravity="center"
                android:text="@string/add_rate"
                android:textColor="@color/blue"
                android:layout_marginRight="5dp"
                android:textSize="25sp" />

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.example.teacheronlinecourse.Fonts.Comfortaa_Light
                    android:id="@+id/course_num_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_ondemand_video_black_24dp"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="30 Video"
                    android:textSize="25sp" />

                <com.example.teacheronlinecourse.Fonts.Comfortaa_Light
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_attach_file_black_24dp"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Support Files"
                    android:textSize="25sp" />

                <com.example.teacheronlinecourse.Fonts.Comfortaa_Light
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_all_inclusive_black_24dp"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Full life time access"
                    android:textSize="25sp" />

                <com.example.teacheronlinecourse.Fonts.Comfortaa_Light
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_create_black_24dp"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Support exams"
                    android:textSize="25sp"

                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.example.teacheronlinecourse.Fonts.Comfortaa_Bold
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/enrol"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="@string/enrol_now"
            android:textColor="@color/blue"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.teacheronlinecourse.Fonts.Comfortaa_Bold
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:id="@+id/files"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:text="@string/files"
                android:textColor="@color/blue"
                android:textSize="25sp"
                android:visibility="gone"/>

            <com.example.teacheronlinecourse.Fonts.Comfortaa_Bold
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:id="@+id/videos"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:text="@string/videos"
                android:textColor="@color/blue"
                android:textSize="25sp"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>